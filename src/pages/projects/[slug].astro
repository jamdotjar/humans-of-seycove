---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";

interface Props {
    project: CollectionEntry<"projects">;
    prev: CollectionEntry<"projects"> | undefined;
    next: CollectionEntry<"projects"> | undefined;
}

export async function getStaticPaths() {
    const projects = await getCollection("projects");

    return projects.map((project, index) => {
        const prev = index > 0 ? projects[index - 1] : undefined;
        const next =
            index < projects.length - 1 ? projects[index + 1] : undefined;

        return {
            params: { slug: project.slug },
            props: { project, prev, next },
        };
    });
}

const { project, prev, next } = Astro.props;
const { Content } = await project.render();
---

<Layout title="{project.data.title}" description={project.data.summary}>
    <div>
        <article
            class="prose prose-stone prose-lg max-w-3xl mx-auto my-8 px-4 md:px-0"
        >
            <div class="flex flex-col justify-center items-center">
                <Image
                    src={project.data.cover}
                    alt={project.data.author}
                    class="object-cover object-center !m-0 block rounded-lg border-2 border-slate-200 shadow-md sm:max-w-2/3"
                />
                <p class="text-l md:text-2xl mt-3 mb-1 font-serif italic">
                    {project.data.author}
                </p>
                <h1 class="mb-1">
                    {project.data.title}
                </h1>
                <p class="lead mb-0 text-center">{project.data.summary}</p>
                <hr class="mb-0 w-full" />
            </div>
            <div class="">
                <Content />
            </div>
            <hr class="my-8 mb-2 w-full" />
            <div
                class="italic font-serif text-sm text-stone-500 text-center flex items-center justify-center mb-4"
            >
                read more stories:
            </div>

            <div
                class="flex flex-row items-center justify-between max-w-2xl mx-auto relative"
            >
                <div class="w-1/3 text-left">
                    {
                        prev ? (
                            <a
                                href={`/projects/${prev.slug}`}
                                class="text-center font-serif italic no-underline text-stone-600 hover:text-stone-900 hover:underline transition-colors"
                            >
                                <div class="flex items-center">
                                    <span class="mr-1">←</span>
                                    <span class="leading-tight inline-block">
                                        {prev.data.title}
                                    </span>
                                </div>
                            </a>
                        ) : (
                            <span class="text-center font-serif italic text-stone-300">
                                ← Previous
                            </span>
                        )
                    }
                </div>
                <div
                    class="w-1/3 text-center absolute left-1/2 transform -translate-x-1/2"
                >
                    <a
                        href="/"
                        class="font-serif italic text-stone-600 no-underline hover:text-stone-900 hover:underline transition-colors"
                        >Home</a
                    >
                </div>
                <div class="w-1/3 text-right">
                    {
                        next ? (
                            <a
                                href={`/projects/${next.slug}`}
                                class="text-center font-serif no-underline italic text-stone-600 hover:text-stone-900 hover:underline transition-colors"
                            >
                                <div class="flex items-center justify-end">
                                    <span class=" leading-tight inline-block">
                                        {next.data.title}
                                    </span>{" "}
                                    <span class="ml-1">→</span>
                                </div>
                            </a>
                        ) : (
                            <span class="text-center font-serif italic text-stone-300">
                                Next →
                            </span>
                        )
                    }
                </div>
            </div>
        </article>
    </div>
</Layout>
